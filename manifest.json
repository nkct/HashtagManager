{
  "name": "Hashtag Manager",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "Tool to help you manage your hashtags",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Hashtag Manager",
    "default_popup": "popup.html"
  },
  "permissions": [
    "clipboardWrite",
    "storage"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}